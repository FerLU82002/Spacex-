---
interface Props {
  id: string;
  details: string | null;
  img: string;
  success: boolean;
  flightNumber: number;
}

const { success, flightNumber, details, img, id } = Astro.props;

const lauchStatus = success ? "Ã‰xito" : "Fracaso";
---

<a
  href={`/launch/${id}`}
  class="rounded-lg shadow-md bg-gray-800 border-gray-700 hover=scale-105
     hover:bg-gray-700 hover:border-gray-700 transition flex flex-col"
>
  <picture class="flex justify-center p-4">
    <img class="mb-5 rounder-lg" src={img} alt={`patch for launch ${id}`} />
  </picture>

  <header class="p-4 flex-grow">
    <span
      class={` ${ success ? "bg-green-400 text-green-900" : "bg-red-400 text-red-900" } text-xs font-semibold mr-2 px-2.5 py-0.5 rounded `}
    >
      {lauchStatus}
    </span>

    <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
      Flight #{flightNumber}
    </h2>
    <p class="mb-4 font-light text-gray-400">
      {
        details != null && details?.length > 100
          ? details.slice(0, 100) + "..."
          : details
      }
    </p>
  </header>
</a>
